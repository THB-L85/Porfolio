---

{
  icons.map(({name, level, width, icon:Icon}) => (
    <div class="h-[4.5rem]">
      <div class="flex flex-col w-fill mx-2 px-4 py-1.5 rounded-xl bg-slate-300/20 group transition-all duration-500 max-h-[2.5rem] hover:max-h-[4.5rem] overflow-hidden text-center">
        <div class="flex flex-row items-center gap-3">
          <Icon class={width} />
          <h4>{name}</h4>
        </div>
        <p class="opacity-0 scale-y-0 group-hover:opacity-100 group-hover:scale-y-100 transform transition-all duration-300 origin-top pt-1.5 text-sm text-[#F39C12]">
          {level}
        </p>
      </div>
    </div>
  ))
