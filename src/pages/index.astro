---
import Layout from "../layouts/Layout.astro";
import Bange from "../components/Bange.astro";
import Location from "../components/icons/Location.astro";
import Github from "../components/icons/Github.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Title from "../components/Title.astro";
import ExperienceCard from "../components/ExperienceCard.astro";
import Gmail from "../components/icons/Gmail.astro";
import Project from "../components/Project.astro";
import Skills from "../components/Skills.astro";

const startYear = 2023;
const currentYear = new Date().getFullYear();
const yearsCount = currentYear - startYear;

const currentDate = new Date(); // Fecha actual

const startActualJob = new Date(2024, 10); // Noviembre de 2024

// Cálculo directo de años y meses
const totalMonths = (currentDate.getFullYear() - startActualJob.getFullYear()) * 12 
                   + (currentDate.getMonth() - startActualJob.getMonth());

const currentYears = Math.floor(totalMonths / 12); // Años completos
const currentMonths = totalMonths % 12; // Meses restantes
---

<Layout
  title="Luis Duran's Portfolio - Software Developer & Web Developer"
>
  <main id="home" >
    <section 
      class="flex flex-col-reverse lg:flex-row justify-center w-full mx-auto px-7 md:px-32 lg:flex-wrap lg:w-[924px] lg:h-[316px] lg:p-0 lg:mt-52 lg:mb-7 mt-16"
    >
      <div class="lg:w-2/3 mt-3">
        <h1
          class="text-5xl lg:text-5xl text-center md:text-left font-bold text-balance md:px-0"
        >
          Hi, I'm Luis Duran
        </h1>
        <h2 class="text-lg lg:text-lg text-center md:text-start py-8 lg:pr-9 opacity-80">
          Graduated in <span class="text-[#E74C3C]"
            >Computer Systems Engineering</span
          >, deeply interested in <span class="text-[#E74C3C]"> Software Development</span> with  <span
            class="text-[#E74C3C]"> { yearsCount }+ years of experience</span
          >. I’m constantly looking to expand my knowledge of new technologies and best practices in the field.
        </h2>
        <div
          class="flex flex-wrap-reverse justify-center md:flex-row md:justify-start"
        >
          <Location class="w-4 md:w-5 md:h-6" />
          <span class="self-center text-base md:text-lg px-2 md:px-3"
            >Mexico City, Mexico</span
          >
          <span
            class="flex justify-center w-full md:w-auto mb-4 md:mb-0 md:pl-10 md:self-center"
            ><Bange>Available for freelance work</Bange></span  
          >
        </div>
        <div class="flex gap-7 pt-6 justify-center md:justify-start">
          <a href="https://github.com/THB-L85" target="_blank" class="hover:scale-110 transition duration-300 opacity-75 hover:opacity-100 hover:rotate-12"
            ><Github class="w-10 h-10"/></a
          >
          <a href="https://www.linkedin.com/in/luis-duran-r" target="_blank" class="hover:scale-110 transition duration-300 opacity-75 hover:opacity-100 hover:-rotate-12"
            ><Linkedin class="w-10 h-10"/></a
          >
          <a href="mailto:luis.dr85a@gmai.com" target="_blank" class="hover:scale-110 transition duration-300 opacity-75 hover:opacity-100 hover:rotate-12"
            > <Gmail class="w-14 h-14 -mt-2"/>  </a
          >
        </div>
      </div>
      <div class="flex justify-center">
        <img
          src="./foto-profile-2.jpg"
          alt="foto"
          class="rounded-full size-40 my-2 lg:mt-2 md:w-40 md:h-40 lg:w-48 lg:h-48 object-cover hover:scale-110 transition duration-300"
        />
      </div>
    </section>
    <section id="skills" class="flex flex-col w-full h-dvh px-1 md:mx-auto lg:w-[1128px] pt-24">
      <div class="flex justify-center mb-10">
        <Title>Skills</Title>
      </div>
      <div class="flex-wrap inline-flex content-start justify-center w-full  mx-auto lg:w-[850px] ">
        <Skills />
      </div>
    </section>
    <section id="experience" class="flex flex-col w-full h-auto mx-auto lg:w-[1128px] pt-28 my-16">
      <div class="flex justify-center mb-10">
        <Title>Experience</Title>
      </div>
      <div class="mx-6 lg:mx-44">
        <ExperienceCard 
          currentYears={ currentYears}
          currentMonths={ currentMonths}
        />
      </div>
    </section>
    <section id="projects" class="flex flex-col w-full h-auto mx-auto lg:w-[1128px] pt-28 my-16">
      <div class="flex justify-center mb-10">
        <Title>Projects</Title>
      </div>
      <div class="mx-4 md:mx-10 lg:mx-32 text-base lg:text-lg">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-1">
          <Project linkProject="https://coffee-blog-dev.netlify.app/" linkGithub="https://github.com/THB-L85/coffee_blog" imageProject="./coffee_blog.png" titleProject="Coffee Blog" badges={["HTML","CSS"]}>This is a Coffee Blog for Coffee Lovers & Devs.</Project>
        </div>
      </div>
    </section>
    <section id="about_me" class="flex flex-col w-full h-auto mx-auto lg:w-[1128px] my-16">
      <div class="flex justify-center mb-10">
        <Title>About me</Title>
      </div>
      <div class="mx-10 lg:mx-52 text-base lg:text-lg opacity-80">
        <span>
          I'm a passionate software developer who values teamwork, continuous learning, and writing clean, maintainable code.
          I enjoy collaborating on meaningful projects and take pride in building scalable and reliable web applications using tools like Laravel, JavaScript, and .NET.
          I'm always open to new challenges that allow me to grow professionally and contribute value to every project I join.
        </span>
      </div>
    </section>
  </main>
</Layout>
